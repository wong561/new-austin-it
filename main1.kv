                            font_size: 30
                            halign: 'left'
                            size_hint_y: None
                            height: self.texture_size[1]
                            padding_y: 2

                        MDLabel:
                            id: about3
                            text: "Dit is een simpele applicatie om snel kleine leningen te calculeren."
                            font_size: 30
                            halign: 'left'
                            size_hint_y: None
                            height: self.texture_size[1]
                            padding_y: 2 

                        MDCard:
                            size_hint: None, None
                            size: 300, 400
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            elevation: 10
                            padding: 25
                            spacing: 25
                            orientation: 'vertical'
                            Image:
                                source: 'logo.png'

            MDScreen:                       
                name: "scr 3"
                ScrollView: 
                                                
                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        padding: 40
