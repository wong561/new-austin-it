

<ContentNavigationDrawer>

    
            

MDScreen:

    MDTopAppBar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Simple Loan Calculator"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        
    MDNavigationLayout:
        x: root.height
        size_hint_y: 1.0 - toolbar.height/root.height


        ScreenManager:
            id: screen_manager
            
            MDScreen:
                name: "scr 1"
                ScrollView:                

                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        padding: 40
                        spacing: 60

                        Widget:
                            size_hint_y: None
                            height: 10

                        MDLabel:
                            id: instructie
                            text: "Vul onderstaande gegevens in om de lening te calculeren."
                            halign: "center"
                            font_size: 50 
                            theme_text_color: "Custom"
                            
                            
                        Widget:
                            size_hint_y: None
                            height: 10                   
                                                

                        MDTextField:
                            id: totaal
                            hint_text: "Totaal bedrag(USD)"
                            icon_right: "currency-usd"
                            size_hint_x: None
                            width: 650                            
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            required: True
                            multiline: False
                            input_filter: "float"
                            helper_text_mode: "on_error"
                            helper_text: "Vul aub het totaal bedrag van de lening in!"
                            input_type: 'number'
                            
                                                
                            
                            
                        MDTextField:
                            id: aanbetaling
                            hint_text: "Aanbetaling percentage"
                            icon_right: "percent-outline"
                            size_hint_x: None
                            width: 650
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            multiline: False
                            input_filter: "float"
                            input_type: 'number'
                            required: True
                            helper_text_mode: "on_error"
                            helper_text: "Vul aub het aanbetaling percentage voor de lening in!"

                        MDTextField:
                            id: interest
                            hint_text: "Rente"
                            icon_right: "percent-outline"
                            size_hint_x: None
                            width: 650
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            multiline: False
                            input_filter: "float"
                            input_type: 'number'
                            required: True
                            helper_text_mode: "on_error"
                            helper_text: "Vul aub de rente voor de lening in!"

                        MDTextField:
                            id: aflossing
                            hint_text: "Aflossing(in maanden)"
                            icon_right: "calendar-month"
                            size_hint_x: None
                            width: 650
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            multiline: False
                            input_filter: "int"
                            input_type: 'number'
                            required: True
                            helper_text_mode: "on_error"
                            helper_text: "Vul aub het gewenst aantal maanden voor de aflossing in!"

                        MDTextField:
                            id: voldaan
                            hint_text: "Maanden reeds afgelost"
                            icon_right: "calendar-month"
                            size_hint_x: None
                            width: 650
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            multiline: False
                            input_filter: "int"
                            input_type: 'number'
                            min_value: 1
                            required: True
                            helper_text_mode: "on_error"
                            helper_text: "Vul aub in hoeveel maanden reeds zijn afgelost!"

                        MDRoundFlatButton:
                            id: knop
                            text: "Calculeer lening"
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            on_press:
                                #app.calculateResults() if totaal.text=='' and aanbetaling.text=='' and interest.text=='' and aflossing.text=='' and voldaan.text=='' and aflossing.text=='0' else None #DELETE!!this line of code for running tests only. 

                                app.calculateResults() if totaal.text!='' and aanbetaling.text!='' and interest.text!='' and aflossing.text!='' and voldaan.text!='' and aflossing.text!='0' else None

                        MDRoundFlatButton:
                            id: knop3
                            text: "Toon schema"
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            on_press:
                                app.showSchedule() 
                            
                        MDRoundFlatButton:
                            id: knop2
                            text: "Reset"
                            font_size: 50
                            pos_hint: {"center_x": 0.5}
                            on_press:
                                app.showSchedule()
                                
                                                                                        
                                                
                            
                                                       

