                            font_size: 50
                            pos_hint: {"bottom_y": 0.9}
                            on_release:app.backButton()
            MDScreen:                       
                name: "scr 4"
                ScrollView: 
                                                
                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        padding: 40
                        spacing: 75                         

                        MDLabel:
                            id: labeltext
                            text: "VICTORY!!!!!11"                      
                            font_size: 50   
                        MDRoundFlatButton:
                            id: back_button_1
                            text: "Back"
                            font_size: 50
                            pos_hint: {"bottom_y": 0.9}
                            on_release:app.backButton()
                            on_press:app.clearInput()

                        MDLabel:
                            id:chart
                            text:"Schedule here!!!" 

  
                      
        MDNavigationDrawer:
            id: nav_drawer

                       
            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                
                

          


